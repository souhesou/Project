{% extends 'base_front.html.twig' %}

{% block container %}


    <body>
    <section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url({{ asset('front/images/forul.jpg') }})";>
        <div class="container">
            <div class="row align-items-center justify-content-center site-hero-inner">
                <div class="col-md-8 text-center">
                    <div class="mb-5 element-animate">
                        <div class="block-17">
                            <h1 class="heading mb-4" style="color: black">{{ 'discutea.forum.forumlist'|trans }}</h1>
                            <div class="lead"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div id="navbar" class="navbar-brand absolute">
                <ul class="navbar-brand absolute">
                    {% if is_granted("ROLE_MODERATOR") %}
                    <li><a href="{{ path('discutea_forum_admin_dashboard') }}">Admin</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <div class="starter-template">

            {% for label, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ label }}">{{ flash }}</div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}

        </div>
    </div><!-- /.container -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    </body>

{% endblock %}