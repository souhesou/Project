{% extends 'base.html.twig' %}

{% block container %}
    <center>
    <h1><i class="fa fa-angle-right"></i> Cassociales list</h1>

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-advance table-hover" id="hidden-table-info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cassociale in cassociales %}
            <tr>
                <td><a href="{{ path('sociale_show', { 'id': cassociale.id }) }}">{{ cassociale.id }}</a></td>
                <td>{{ cassociale.lieu }}</td>
                <td>{% if cassociale.date %}{{ cassociale.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sociale_show', { 'id': cassociale.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sociale_edit', { 'id': cassociale.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sociale_new') }}">Create a new cassociale</a>
        </li>
    </ul>
    </center>
{% endblock %}
