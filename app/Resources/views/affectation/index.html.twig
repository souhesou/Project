{% extends 'base.html.twig' %}

{% block container %}
<center>
    <section id="main-content">


        <h1>Donations Assigned</h1>

        <table class="table table-striped table-advance table-hover">
            <hr>
        <thead>
            <tr>
                <th><span class="badge bg-default">Number</th>
                <th><span class="badge bg-default">Quantity</th>

            </tr>
        </thead>
        <tbody>
        {% for affectation in affectations %}
            <tr>
                <td><span class="label label-info label-default""><a href="{{ path('affectation_show', { 'id': affectation.id }) }}">{{ affectation.id }}</a></td>
                <td><span class="label label-info label-warning">{{ affectation.qnt }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('affectation_new') }}">Assign a new donation</a>
        </li>
    </ul>
{% endblock %}
