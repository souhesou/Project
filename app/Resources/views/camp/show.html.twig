{% extends 'base.html.twig' %}

{% block container %}
    <center>
        <section id="main-content">
            <h1>Details</h1>

            <table class="table table-striped table-advance table-hover">
                <hr>
                <thead>
                <a class="btn btn-round btn-default"  href="{{ path('camp_index') }}"><i class="fa fa-chevron-circle-left"></i></a>


                <a  class="btn btn-round btn-info" href="{{ path('camp_pdf', { 'id': camp.id }) }}"><i class="fa fa-cloud-download"></i></a></button>

                <a class="btn btn-round btn-warning" href="{{ path('camp_edit', { 'id': camp.id }) }}"><i class="fa fa-pencil"></i></a>


                {{ form_start(delete_form) }}
                <button class="btn btn-round btn-danger" type="submit" > <i class="fa fa-trash-o"></i>   </button>
                {{ form_end(delete_form) }}
                <br>
                <br>
                <br>
                </thead>
                <tbody>
                <tr>
                    <th><span class="badge bg-primary">Number</span> </th>
                    <td class="hidden-phone"><span class="badge bg-success">{{ camp.id }}</td>
                </tr>
                <tr>
                    <th ><span class="badge bg-primary">Capacity</span></th>
                    <td ><span class="badge bg-success">{{ camp.capacite }}</td>
                </tr>
                <tr>
                    <th class="hidden-phone"><span class="badge bg-primary">Lieu</span></th>
                    <td><span class="badge bg-success">{{ camp.lieu.lieu }}</td>
                </tr>
                {% for besoins in besoins %}
                    <tr>
                        <th class="hidden-phone"><span class="badge bg-primary">Location</span></th>
                        <td><span class="badge bg-success">{{ besoins.nomBs }}</td>
                    </tr>
                    <tr>
                        <th class="hidden-phone"><span class="badge bg-primary">Quantity </span></th>
                        <td><span class="badge bg-success">{{ besoins.quantite }}</td>
                    </tr>


                {% endfor %}

                </tbody>
            </table>

            {% for somme in somme %}

                <div class="alert alert-warning"><h3>the number of this camps needs is   {{ somme.1 }} products</h3> </div>


            {% endfor %}





        </section></center>
{% endblock %}
