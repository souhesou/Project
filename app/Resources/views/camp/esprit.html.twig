{% extends 'base_front.html.twig' %}
{% block container %}

        <style>
            /* Always set the map height explicitly to define the size of the div
             * element that contains the map. */
            #map {
                height: 90%;

            }
            /* Optional: Makes the sample page fill the window. */
            html, body {
                height: 90%;
                margin: 0;
                padding: 0;
            }
        </style>


    <div id="map"></div>
    <script>

        function initMap() {

                var myLatLng = {lat: 36.8977106 , lng:10.1896244  };


            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 10,
                center: myLatLng
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'our location is here'
            });
        }

    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCH-odWuzqxvAPFCB0pQ3T-z0GmWkHczOg&callback=initMap">
    </script>
