{% extends('base_front.html.twig') %}

    {% block container %}

        <section class="site-hero overlay" data-stellar-background-ratio="0.5"
                 style="background-image: url({{ asset('front/images/1.jpg') }});" xmlns="http://www.w3.org/1999/html">
            <div class="container">
                <div class="row align-items-center justify-content-center site-hero-inner">
                    <div class="col-md-8 text-center">

                        <div class="mb-5 element-animate">
                            <div class="block-17">
                                <h1 class="heading mb-4">Our Events</h1>
                                <div class="lead"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <!-- END section -->
        <marquee behavior="alternate"><a class="btn btn-primary" href="{{ path("volontairejeu") }}" role="button">Joy</a></marquee>

        <section class="site-section bg-light">
            <div class="container">

                <div class="row">
                    {% for c in event  %}
                        <div class="col-md-4 col-lg-4 mb-5">
                            <div class="block-20">
                                <figure>
                                    <a href="blog-single.html"><img src="{{ asset('images/'~c.affiche) }}" alt="Image placeholder" class="img-fluid"></a>
                                </figure>
                                <div class="text text-center">
                                    <h3 class="heading"><a href="#">{{c.titre  }}</a></h3>
                                    <div class="meta mb-3">
                                        <div><a href="#"><span class="fa fa-calendar"></span> {{c.date|date  }}</a></div>
                                        <div><a href="#"><span class="ion-ios-location mr-2"></span> {{ c.lieu }}</a></div>
                                        <div><a href="#"><span class="fa fa-money"></span> prix {{ c.prix }}</a></div>
                                    </div>

                                    <p><a href="{{ path("volontairesingleevents", {"id":c.id}) }}"><strong>Read More</strong></a></p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div></div>




            </div>

        </section>


    {% endblock %}