{% extends('base_front.html.twig') %}

    {% block container %}
        <style>
            .avatar {
                vertical-align: middle;
                width: 50px;
                height: 50px;
                border-radius: 50%;
            }
        </style>
        <section class="site-hero overlay" data-stellar-background-ratio="0.5"
                 style="background-image: url({{ asset('front/images/1.jpg') }});" xmlns="http://www.w3.org/1999/html">
            <div class="container">
                <div class="row align-items-center justify-content-center site-hero-inner">
                    <div class="col-md-8 text-center">

                        <div class="mb-5 element-animate">
                            <div class="block-17">
                                <h1 class="heading mb-4">{{ event.titre }}</h1>
                                <span class="lead"> {{ event.date|date }}  </span>
                                <div class="lead"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <p></p></section>








        <div class="site-section bg-light">
        <div class="container">
        <div class="row">

            <div class="col-md-6 col-lg-8 order-md-2 pl-lg-5">
                <div class="row">
                    <div class="col-md-12 col-lg-12 mb-5">
                        <h1>{{ event.titre }}</h1>
                        <blockquote><p>{{ event.description }}</p>
                            <div><a href="#"><span class="fa fa-calendar"></span> {{event.date|date  }}</a></div>
                            <div><a href="#"><span class="ion-ios-location mr-2"></span> {{ event.lieu }}</a></div>
                            <div><a href="#"><span class="fa fa-money"></span>{{ event.prix }}</a></div>





                        </blockquote>

                        <div class="block-26">
                            <h3 class="heading">Tags</h3>
                            <ul>
                                <li><a href="#">events</a></li>
                                <li><a href="#">help</a></li>
                                <li><a href="#">charity</a></li>
                                <li><a href="#">love</a></li>
                                <li><a href="#">peace</a></li>
                                <li><a href="#">faith</a></li>
                            </ul>
                        </div>

                        <br><br><br><br>


                        <div class="row" style="border: 3px solid black;padding:6px;">
                            <h2>Comments :</h2>
                            <br>
                            {% for th in thecomments  %}
                                <div class="col-md-6"><br>
                                    <img src="{{ asset('front/images/avatar.png') }}" alt="Avatar" class="avatar">
                                </div>
                                <div class="col-md-6" style="margin-top:15px;">
                                    <h6>{{  th.comment }}</h6>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="comment-form-wrap pt-5">
                            <h3 class="mb-5">Leave a comment</h3>
                            <form action="#" method="post" class="bg-light">


                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea name="cmntr" id="message" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Post Comment" class="btn btn-primary py-2 px-4">
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>


        </div>
        <!-- END content -->



    {% endblock %}