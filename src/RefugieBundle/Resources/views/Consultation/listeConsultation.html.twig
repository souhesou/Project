{% extends 'base_front.html.twig' %}
{% block container %}

    <input type="text" id="myInput" onkeyup="search()" placeholder="Search .." title="Type in a name"><br><br>
    <div class="container">

    <table class="table" id="example">
    <thead>
    <tr>
        <th>Name</th>
        <th>Topic</th>
        <th>Contents</th>
        <th>Duration</th>
        <th>Date</th>
        <th>Action</th>

    </tr>
    </thead>
    <tbody>
    {% for const in consultation %}
    <tr id="souhe">
        <td>{{ const.idref.nom }}</td>
        <td>{{ const.sujet }}</td>
        <td>{{ const.contenu }}</td>
        <td>{{ const.duree |date('g:i') }}</td>
        <td>{{ const.date |date }}</td>
        <td><a href="{{ path('modifier_Consult',{'id':const.id}) }}"><button class="btn btn-primary">Update</button></a> <a href="{{ path('supprimer_Consultation',{'id':const.id}) }}"><button class="btn btn-primary">Delete</button></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>


        </center>

    <div class="col-xs-12" align="right">
        <br><br>
        <br><br>
        <br><br>
        <button class="btn btn-primary btn-icon-text" onclick="window.print();"><i class="mdi mdi-printer btn-icon-append"></i>Print</button>
        <br>
        <br>
    </div>
    </div>
    <script>
        function search() {
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#example #souhe").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        }
    </script>


{% endblock %}